extends layouts/datatable

block title
  title= "MultiScan Segmentation Visualiztion"

block body
  div
    h1 Scenes
    div.btn-group
      button.btn.btn-default.dropdown-toggle(type='button', data-toggle='dropdown')
        | Show
        span.caret
      ul.dropdown-menu(role='menu')
        li
          a(href='../scans/segs') All
        li
          a(href='../scans/segs?group=checked') Checked
        li
          a(href='../scans/segs?group=staging') Staging
  hr
  div#loadingMessage Loading...
  table#resultTable(style='visibility: hidden')
    thead
      tr
        th name
        th type
        th scans
        th previews
        th actions
        th segs
    tfoot
      tr
        th name
        th type
        th scans
        th previews
        th actions
        th segs
    tbody
      each scene in scenes
        tr
          td #{scene.name}
          td #{scene.type}
          td #{scene.scans.length}
          td(style='white-space: nowrap;')
            each scan in _.take(_.filter(scene.scans, function(x) { return x.previewUrl; }), 4)
              a(href=`${settings.scanFilesPath}/${scan.path}/${settings.outputs}/${scan.id}_obj_thumb_high.png`, target='_blank')
                img.lazy(data-src=`${scan.previewUrl}`, style='max-height: 50px;')
          td
            a.btn.btn-primary(href=`../scans/manage?id=${scene.name}`, role='button', title="View scans") Scans
          td(style='white-space: nowrap;')
            each scan in _.take(_.filter(scene.scans, function(x) { return x.previewUrl; }), 4)
              a(href=`${settings.scanFilesPath}/${scan.path}/${settings.outputs}/segs_tri/${scan.id}_decimated_colored.0.005000.segs-coarse.png`, target='_blank')
